{% extends 'base.html.twig' %}

{% block stylesheets %}

<style>
    body {
            background-color: #f8f9fa; /* Nuance de bleu gris */
        }
    .info-cards {
            margin-top: 30px;
        }
        .box {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Effet d'ombre */
            margin-bottom: 20px; /* Ajout d'espace entre les sections */
        }

    </style>
{% endblock %}

{% block title %}Groupe d'Unit√© : {{ groupeUnite.name }}{% endblock %}

{% block body %}
    <h1>{{ groupeUnite.name }}</h1>
    <section class="statis mt-3 text-center">
        <div class="row">
            {% for unite in wsUnites %}
                <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                    <div class="box p-3">
                        <h3>{{ unite.name }}</h3>
                        {% set memberCount = membresParUnite[unite.name]|default(0) %}
                        <p class="lead">Membres: {{ memberCount }}</p>
                    </div>
                </div> 
                {% if loop.index is divisible by(4) %}
                    </div><div class="row">
                {% endif %}
            {% endfor %}
        </div> 
    </section>
{% endblock %}

